<Page x:Class="Game.WPF.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game.WPF.Pages"
      mc:Ignorable="d" 
      Height="720" Width="1280"
      Title="MenuPage"
      FontSize="36">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Background="Gray" BorderBrush="Black" Content="Levels" Height="80" Width="360" Foreground="White" Margin="30" Click="Levels_Click"/>
            <Button Background="Gray" BorderBrush="Black" Content="Options" Height="80" Width="360" Foreground="White" Margin="30" Click="Options_Click"/>
            <Button Background="Gray" BorderBrush="Black" Content="Exit" Height="80" Width="360" Foreground="White" Margin="30" Click="Exit_Click"/>

        </StackPanel>
        <Image Grid.Row="0" Source="/texture/logo.png" HorizontalAlignment="Center" VerticalAlignment="Top" />

        <Grid.Background>
            <ImageBrush ImageSource="/texture/background.png"/>
        </Grid.Background>
    </Grid>
</Page>
